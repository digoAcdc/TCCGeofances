<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/Margin.Half"
    android:layout_marginStart="@dimen/Margin.Half"
    android:layout_marginTop="@dimen/Margin.Half"
    android:elevation="20dp"
    card_view:cardBackgroundColor="@color/Background.CardView"
    card_view:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listitem_geofenceName"
            android:textColor="@color/white"
            style="@style/TextView.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/Margin.Standard"
            tools:text="Geofence Name" />

        <View style="@style/Divider.Horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/Margin.Standard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/white"
                    style="@style/TextView.Small"
                    android:layout_width="@dimen/Width.Label"
                    android:layout_height="wrap_content"
                    android:text="@string/Label.Latitude" />

                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/listitem_geofenceLatitude"
                    style="@style/TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Label.Latitude" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/white"
                    style="@style/TextView.Small"
                    android:layout_width="@dimen/Width.Label"
                    android:layout_height="wrap_content"
                    android:text="@string/Label.Longitude" />

                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/listitem_geofenceLongitude"
                    style="@style/TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Label.Longitude" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/white"
                    style="@style/TextView.Small"
                    android:layout_width="@dimen/Width.Label"
                    android:layout_height="wrap_content"
                    android:text="@string/Label.Radius" />

                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/listitem_geofenceRadius"
                    style="@style/TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Label.Radius" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/Divider.Horizontal" />

        <Button
            android:textColor="@color/white"
            android:id="@+id/listitem_deleteButton"
            style="@style/DeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:text="@string/Button.DeleteGeofence" />

    </LinearLayout>

</android.support.v7.widget.CardView>